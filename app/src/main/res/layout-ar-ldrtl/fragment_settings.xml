<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_product_right">

    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="@dimen/settings_header_text_size"
        android:gravity="right"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/open_close"
        />

    <ImageView
        android:id="@+id/open_close"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:onClick="openDrawer"
        android:src="@drawable/icon_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="30dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/language"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text"
            app:layout_constraintTop_toTopOf="@id/ln_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ln_spinner"
            app:layout_constraintBottom_toBottomOf="@id/ln_spinner"
            />
        <LinearLayout
            android:id="@+id/ln_spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_border_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/language"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <Spinner
                android:id="@+id/language_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingVertical="5dp"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/terms_condition"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_sup_header_text_size"
            android:background="@drawable/back_btn"
            app:layout_constraintTop_toBottomOf="@id/ln_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/terms_condition"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="right"
            android:text="@string/terms_condition"
            android:textColor="@color/black"
            android:textSize="@dimen/desc_gallery_item"
            android:editable="false"
            android:background="@drawable/background_border_grey"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>