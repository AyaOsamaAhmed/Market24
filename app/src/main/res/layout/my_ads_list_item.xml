<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_border_grey"
  >

    <ImageView
        android:id="@+id/my_ads_img_item"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_logo_round"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/my_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_name"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/my_ads_img_item"
        app:layout_constraintStart_toEndOf="@id/my_ads_img_item"
        />
    <TextView
        android:id="@+id/my_product_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_details"
        android:textSize="@dimen/text_size"
        android:textColor="@color/grey"
        android:minLines="1"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/my_product_name"
        app:layout_constraintStart_toStartOf="@id/my_product_name"
        app:layout_constraintBottom_toTopOf="@id/my_product_price"
        />
    <TextView
        android:id="@+id/my_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000$"
        android:textSize="@dimen/title_text"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/my_product_desc"
        app:layout_constraintStart_toStartOf="@id/my_product_name"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>