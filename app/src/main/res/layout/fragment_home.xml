<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_home_2"
  >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bachground_icons_home"
                android:alpha="0.7"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:id="@+id/all_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/home_car_cat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_all_product"
                        android:padding="5dp"
                        android:background="@drawable/background_circle_white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_product"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cat_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cat_one_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dress"
                        android:padding="5dp"
                        android:background="@drawable/background_circle_white"
                        />
                    <TextView
                        android:id="@+id/cat_one_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fashion"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cat_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cat_two_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_animal"
                        android:padding="5dp"
                        android:background="@drawable/background_circle_white"
                        />
                    <TextView
                        android:id="@+id/cat_two_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/animal"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cat_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cat_three_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home"
                        android:padding="5dp"
                        android:background="@drawable/background_circle_white"
                        />
                    <TextView
                        android:id="@+id/cat_three_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_home"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cat_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cat_four_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pouf"
                        android:padding="5dp"
                        android:background="@drawable/background_circle_white"
                        />
                    <TextView
                        android:id="@+id/cat_four_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/furnished"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/all_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="3dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_all_cat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_open_close_drawer"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_categories"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

              <!--  <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="45"
                    app:sliderStartAutoCycle="true" />
                    -->
                <com.opensooq.pluto.PlutoView
                    android:id="@+id/pluto_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:indicator_visibility="true"
                    app:layout_constraintCircleRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:background="@tools:sample/backgrounds/scenic" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:layout_below="@+id/txtvw"
                android:orientation="vertical"
                android:background="@drawable/bachground_icons_home"
                android:alpha="0.9"
                android:weightSum="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/paid_ads"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paid_ads_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/payment_ads_list_item"
                    tools:orientation="horizontal" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:orientation="vertical"
            android:background="@drawable/bachground_icons_home"
             android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/recently_add_search_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:text="@string/recommended_for_you"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommended_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="3dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/ads_list_item"
                />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/upload_ads_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back_btn"
        android:gravity="center"
        android:padding="2dp"
        android:text="@string/upload_ads"
        android:textColor="@color/white"
        android:textSize="@dimen/settings_header_text_size" />
</RelativeLayout>