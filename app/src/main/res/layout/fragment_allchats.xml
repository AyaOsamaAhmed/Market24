<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_product"
    >

    <TextView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        android:textColor="@color/white"
        android:textSize="@dimen/header_title_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/open_close"
        />

    <ImageView
        android:id="@+id/open_close"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:onClick="openDrawer"
        android:src="@drawable/icon_menu_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swip_recycler"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@id/open_close">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chats_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="10dp"
            tools:listitem="@layout/item_users_chat"
            android:background="@drawable/background_border_grey"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/no_img_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/no_chat"
        />
    <TextView
        android:id="@+id/no_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_chats"
        android:textStyle="bold"
        android:textSize="@dimen/settings_header_text_size"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>